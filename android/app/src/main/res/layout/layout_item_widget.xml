<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wg_layout"
    android:layout_margin="4dp"
    android:padding="8dp"
    android:background="@drawable/bo"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:padding="2dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSoBaoDanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="2dp"
        android:textColor="#000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="2dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tvDiaDiem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="2dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tvGiaoVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDiaDiem"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="2dp"
        android:textColor="#000" />
    <TextView
        android:id="@+id/tvHinhThuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvGiaoVien"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="2dp"
        android:textColor="#000" />

</LinearLayout>